---
interface Props {
  href: string;
  image: string;
  size: string;
  price: string;
  badge?: string;
  badgeType?: 'default' | 'accent';
}

const { href, image, size, price, badge, badgeType = 'default' } = Astro.props;
---

<a href={href} class="project-card">
    <div class="project-card__image">
        <img src={image} alt={`Баня ${size}`} loading="lazy">
        {badge && (
            <span class={`project-card__badge ${badgeType === 'accent' ? 'project-card__badge--accent' : ''}`}>
                {badge}
            </span>
        )}
    </div>
    <div class="project-card__content">
        <h3 class="project-card__size">{size}</h3>
        <div class="project-card__price">{price}</div>
        <span class="project-card__link">
            Подробнее
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="5" y1="12" x2="19" y2="12"></line>
                <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
        </span>
    </div>
</a>
