---
/**
 * Landing Page: Bani-01
 * Premium standalone landing page with A/B testing
 */
const title = "Готовая баня под ключ за 14 дней | С лёгким паром";
const description = "Готовая баня вашей мечты за 14 дней от 450 000 ₽. Доставка и установка за 1 час. Печь, мебель и электрика в комплекте.";
---

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="/lp/bani-01/css/styles.css">

    <!-- Yandex.Metrika counter -->
    <script is:inline type="text/javascript">
        (function(m,e,t,r,i,k,a){
            m[i]=m[i]||function(){(m[i].a=m[i].a||[]).push(arguments)};
