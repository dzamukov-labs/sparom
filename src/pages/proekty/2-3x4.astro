            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="15 18 9 12 15 6"></polyline>
            </svg>
        </button>
        <img src="" alt="" id="lightbox-img">
        <button class="lightbox-nav lightbox-nav--next" aria-label="Вперёд">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="9 18 15 12 9 6"></polyline>
            </svg>
        </button>
        <div class="lightbox-counter" id="lightbox-counter">1 / 7</div>
    </div>

    <!-- VIDEO MODAL -->
    <div class="video-modal" id="video-modal">
        <button class="video-modal__close" aria-label="Закрыть">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="18" y1="6" x2="6" y2="18"></line>
                <line x1="6" y1="6" x2="18" y2="18"></line>
            </svg>
        </button>
        <div class="video-modal__content">
            <iframe id="video-iframe" src="" allow="autoplay; fullscreen" allowfullscreen></iframe>
        </div>
    </div>

    <script>
    (function() {
        // Header scroll effect
        const header = document.getElementById('header');
        window.addEventListener('scroll', () => {
            if (window.scrollY > 50) {
                header.classList.add('scrolled');
            } else {
                header.classList.remove('scrolled');
            }
        });

        // Compare accordion categories
        document.querySelectorAll('.compare-category__toggle').forEach(toggle => {
            toggle.addEventListener('click', () => {
                const cat = toggle.dataset.category;
                const content = document.querySelector(`[data-content="${cat}"]`);
                toggle.classList.toggle('active');
                content.classList.toggle('active');
            });
        });

        // Configurator with dynamic pricing
        let currentStep = 1;
        const totalSteps = 4;
        const indicators = document.querySelectorAll('.config-step-indicator');
        const panels = document.querySelectorAll('.config-panel');
        const btnBack = document.getElementById('config-back');
        const btnNext = document.getElementById('config-next');

        // Price state
        const priceState = {
            size: 397900,
            sizeName: '2,3 × 4 м',
            package: 0,
            packageName: 'Базовая',
            stove: 0,
            foundation: 0,
            terrace: 0,
            furniture: 0
        };

        function formatPrice(n) {
            return n.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ' ') + ' ₽';
        }

        function updateSummary() {
            const base = priceState.size;
            const pkg = priceState.package;
            const extras = priceState.stove + priceState.foundation + priceState.terrace + priceState.furniture;
            const total = base + pkg + extras;

            document.getElementById('summary-size').textContent = formatPrice(base);
            document.getElementById('summary-package').textContent = pkg > 0 ? '+' + formatPrice(pkg) : '—';
            document.getElementById('summary-extras').textContent = extras > 0 ? '+' + formatPrice(extras) : '—';
            document.getElementById('summary-total').textContent = formatPrice(total);
            document.getElementById('summary-size-name').textContent = `Баня ${priceState.sizeName}`;
            document.getElementById('summary-package-name').textContent = `Комплектация «${priceState.packageName}»`;
        }

        function updateStep(step) {
            currentStep = step;

            // Update indicators
            indicators.forEach((ind, i) => {
                ind.classList.remove('config-step-indicator--active', 'config-step-indicator--done');
                if (i + 1 < step) ind.classList.add('config-step-indicator--done');
                if (i + 1 === step) ind.classList.add('config-step-indicator--active');
            });

            // Update panels
            panels.forEach(p => {
                p.classList.remove('config-panel--active');
                if (parseInt(p.dataset.panel) === step) p.classList.add('config-panel--active');
            });

            // Update buttons
            btnBack.style.display = step > 1 ? 'inline-block' : 'none';
            if (step === totalSteps) {
                btnNext.innerHTML = 'Заказать';
            } else {
                btnNext.innerHTML = 'Далее <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="9 18 15 12 9 6"></polyline></svg>';
            }
        }

        btnNext?.addEventListener('click', () => {
            if (currentStep < totalSteps) {
                updateStep(currentStep + 1);
            } else {
                window.location.href = 'tel:88003500393';
            }
        });

        btnBack?.addEventListener('click', () => {
            if (currentStep > 1) updateStep(currentStep - 1);
        });

        // Size selection with price update
        document.querySelectorAll('.config-size').forEach(size => {
            size.addEventListener('click', () => {
                document.querySelectorAll('.config-size').forEach(s => s.classList.remove('config-size--selected'));
                size.classList.add('config-size--selected');
                priceState.size = parseInt(size.dataset.price) || 397900;
                priceState.sizeName = size.querySelector('.config-size__name').textContent;
                updateSummary();
            });
        });

        // Package selection with price update
        const packagePrices = { base: 0, comfort: 72000, max: 214100 };
        const packageNames = { base: 'Базовая', comfort: 'Комфорт', max: 'Максимум' };
        document.querySelectorAll('.config-package').forEach(pkg => {
            pkg.addEventListener('click', () => {
                document.querySelectorAll('.config-package').forEach(p => p.classList.remove('config-package--selected'));
                pkg.classList.add('config-package--selected');
                const pkgType = pkg.dataset.package;
                priceState.package = packagePrices[pkgType] || 0;
                priceState.packageName = packageNames[pkgType] || 'Базовая';
                updateSummary();
            });
        });

        // Option selection with price update
        document.querySelectorAll('.config-option').forEach(opt => {
            opt.addEventListener('click', () => {
                const group = opt.dataset.option;
                document.querySelectorAll(`.config-option[data-option="${group}"]`).forEach(o => o.classList.remove('config-option--selected'));
                opt.classList.add('config-option--selected');
                const price = parseInt(opt.dataset.price) || 0;
                if (group === 'stove') priceState.stove = price;
                if (group === 'foundation') priceState.foundation = price;
                if (group === 'terrace') priceState.terrace = price;
                if (group === 'furniture') priceState.furniture = price;
                updateSummary();
            });
        });

        // Gallery lightbox
        const lightbox = document.getElementById('lightbox');
        const lightboxImg = document.getElementById('lightbox-img');
        const lightboxCounter = document.getElementById('lightbox-counter');
        const galleryItems = document.querySelectorAll('.gallery-item:not(.gallery-item--video)');
        let currentIndex = 0;

        const images = Array.from(galleryItems).map(item => item.querySelector('img').src);

        function openLightbox(index) {
            currentIndex = index;
            lightboxImg.src = images[currentIndex];
            lightboxCounter.textContent = `${currentIndex + 1} / ${images.length}`;
            lightbox.classList.add('active');
            document.body.style.overflow = 'hidden';
        }

        function closeLightbox() {
            lightbox.classList.remove('active');
            document.body.style.overflow = '';
        }

        galleryItems.forEach((item, i) => {
            item.addEventListener('click', () => openLightbox(i));
        });

        lightbox.querySelector('.lightbox-close').addEventListener('click', closeLightbox);
        lightbox.querySelector('.lightbox-nav--prev').addEventListener('click', () => {
            currentIndex = (currentIndex - 1 + images.length) % images.length;
            lightboxImg.src = images[currentIndex];
            lightboxCounter.textContent = `${currentIndex + 1} / ${images.length}`;
        });
        lightbox.querySelector('.lightbox-nav--next').addEventListener('click', () => {
            currentIndex = (currentIndex + 1) % images.length;
            lightboxImg.src = images[currentIndex];
            lightboxCounter.textContent = `${currentIndex + 1} / ${images.length}`;
        });

        // Video modal
        const videoModal = document.getElementById('video-modal');
        const videoIframe = document.getElementById('video-iframe');
        const openVideo = document.getElementById('open-video');
        const VK_VIDEO_URL = 'https://vk.com/video_ext.php?oid=-50174471&id=456239252&hd=2&autoplay=1';

        openVideo?.addEventListener('click', () => {
            videoIframe.src = VK_VIDEO_URL;
            videoModal.classList.add('active');
            document.body.style.overflow = 'hidden';
        });

        videoModal.querySelector('.video-modal__close').addEventListener('click', () => {
            videoModal.classList.remove('active');
            videoIframe.src = '';
            document.body.style.overflow = '';
        });

        // Escape key
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') {
                closeLightbox();
                videoModal.classList.remove('active');
                videoIframe.src = '';
                document.body.style.overflow = '';
            }
        });
    })();
    </script>
</body>
</html>
