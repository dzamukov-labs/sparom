<script is:inline>
    // VK Video Modal
    (function() {
        const videoModal = document.getElementById('video-modal');
        const videoIframe = document.getElementById('vk-video-iframe');
        const openBtn = document.getElementById('open-video-modal');
        const closeBtn = videoModal?.querySelector('.video-modal__close');
        const overlay = videoModal?.querySelector('.video-modal__overlay');

        const VK_VIDEO_URL = 'https://vk.com/video_ext.php?oid=-50174471&id=456239252&hd=2&autoplay=1';

        function openModal() {
            if (videoModal && videoIframe) {
                videoIframe.src = VK_VIDEO_URL;
                videoModal.classList.add('video-modal--open');
                document.body.style.overflow = 'hidden';
            }
        }

        function closeModal() {
            if (videoModal && videoIframe) {
                videoModal.classList.remove('video-modal--open');
                videoIframe.src = '';
                document.body.style.overflow = '';
            }
        }

        openBtn?.addEventListener('click', openModal);
        closeBtn?.addEventListener('click', closeModal);
        overlay?.addEventListener('click', closeModal);

        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape' && videoModal?.classList.contains('video-modal--open')) {
                closeModal();
            }
        });
    })();
</script>
