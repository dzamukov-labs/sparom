    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:wght@300;400;500;600&display=swap" rel="stylesheet">
    <style>
        *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }

        :root {
            --bg: #FFFFFF;
            --text: #1A1A1A;
            --text-light: #767676;
            --accent: #B5694D;
            --border: #EBEBEB;
        }

        html { font-size: 18px; }
        body {
            font-family: 'IBM Plex Sans', -apple-system, sans-serif;
            font-weight: 300;
            color: var(--text);
            background: var(--bg);
            line-height: 1.7;
        }

        a { color: inherit; text-decoration: none; }
        img { max-width: 100%; height: auto; display: block; }

        /* Всё в одну колонку, максимум 680px */
        .content {
            max-width: 680px;
            margin: 0 auto;
            padding: 0 1.5rem;
        }

        .content-wide {
            max-width: 100%;
            padding: 0;
        }

        /* Header — Еле заметный */
        .header {
            padding: 2rem 1.5rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 680px;
            margin: 0 auto;
        }

        .logo {
            font-weight: 500;
            font-size: 0.875rem;
            letter-spacing: 0.02em;
        }

        .header-phone {
            font-size: 0.875rem;
            color: var(--text-light);
        }

        .header-phone:hover {
            color: var(--accent);
        }

        /* Hero — Огромное фото, минимум текста */
        .hero-image {
            width: 100%;
            margin: 2rem 0;
        }

        .hero-image img {
            width: 100%;
            height: 70vh;
            min-height: 400px;
            max-height: 700px;
            object-fit: cover;
        }

        .hero-text {
            padding: 4rem 0;
        }

        .hero-text h1 {
            font-size: 2rem;
            font-weight: 400;
            line-height: 1.3;
            margin-bottom: 1.5rem;
            letter-spacing: -0.02em;
        }

        .hero-text p {
            color: var(--text-light);
            margin-bottom: 2rem;
            font-size: 1rem;
        }

        .hero-actions {
            display: flex;
            gap: 1.5rem;
            flex-wrap: wrap;
            align-items: center;
        }

        .btn {
            font-size: 0.875rem;
            font-weight: 500;
            letter-spacing: 0.02em;
            padding: 0.875rem 1.75rem;
            transition: all 0.2s;
        }

        .btn-primary {
            background: var(--text);
            color: var(--bg);
        }

        .btn-primary:hover {
            background: var(--accent);
        }

        .btn-link {
            color: var(--text-light);
            padding: 0.875rem 0;
            border-bottom: 1px solid var(--border);
        }

        .btn-link:hover {
            color: var(--text);
            border-color: var(--text);
        }

        /* Stats — Горизонтальная линия */
        .stats {
            display: flex;
            gap: 3rem;
            padding: 3rem 0;
            border-top: 1px solid var(--border);
            border-bottom: 1px solid var(--border);
            margin: 2rem 0 4rem;
            flex-wrap: wrap;
        }

        .stat-item {
            display: flex;
            flex-direction: column;
            gap: 0.25rem;
        }

        .stat-number {
            font-size: 1.5rem;
            font-weight: 500;
            letter-spacing: -0.02em;
        }

        .stat-label {
            font-size: 0.75rem;
            color: var(--text-light);
            text-transform: uppercase;
            letter-spacing: 0.1em;
        }

        /* Section */
        .section {
            padding: 4rem 0;
        }

        .section-title {
            font-size: 0.75rem;
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 0.15em;
            color: var(--text-light);
            margin-bottom: 2rem;
        }

        .section-heading {
            font-size: 1.5rem;
            font-weight: 400;
            line-height: 1.4;
            margin-bottom: 1rem;
        }

        .section-text {
            color: var(--text-light);
            margin-bottom: 2rem;
        }

        /* Projects — Вертикальный список с большими фото */
        .projects-list {
            display: flex;
            flex-direction: column;
            gap: 3rem;
        }

        .project-item {
            display: block;
        }

        .project-item img {
            width: 100%;
            aspect-ratio: 3/2;
            object-fit: cover;
            margin-bottom: 1rem;
        }

        .project-meta {
            display: flex;
            justify-content: space-between;
            align-items: baseline;
        }

        .project-size {
            font-weight: 500;
        }

        .project-price {
            color: var(--text-light);
            font-size: 0.9375rem;
        }

        .project-badge {
            display: inline-block;
            font-size: 0.6875rem;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            color: var(--accent);
            margin-left: 0.5rem;
        }

        /* Benefits — Простой список */
        .benefits-list {
            display: flex;
            flex-direction: column;
            gap: 2.5rem;
        }

        .benefit-item {
            display: grid;
            grid-template-columns: 4rem 1fr;
            gap: 1.5rem;
            align-items: start;
        }

        .benefit-number {
            font-size: 2rem;
            font-weight: 500;
            color: var(--accent);
            line-height: 1;
        }

        .benefit-label {
            font-size: 0.75rem;
            color: var(--text-light);
            text-transform: uppercase;
            letter-spacing: 0.1em;
        }

        .benefit-text {
            color: var(--text-light);
            font-size: 0.9375rem;
            margin-top: 0.25rem;
        }

        /* Reviews — Цитаты */
        .reviews-list {
            display: flex;
            flex-direction: column;
            gap: 3rem;
        }

        .review-item {
            padding-left: 1.5rem;
            border-left: 2px solid var(--border);
        }

        .review-text {
            font-size: 1rem;
            line-height: 1.8;
            margin-bottom: 1rem;
            font-style: italic;
        }

        .review-author {
            font-size: 0.8125rem;
            color: var(--text-light);
        }

        /* Geography */
        .geography-stats {
            display: flex;
            gap: 2rem;
            margin: 2rem 0;
            flex-wrap: wrap;
        }

        .geography-stat {
            display: flex;
            flex-direction: column;
        }

        .geography-number {
            font-size: 1.25rem;
            font-weight: 500;
        }

        .geography-label {
            font-size: 0.75rem;
            color: var(--text-light);
        }

        .regions-list {
            display: flex;
            flex-wrap: wrap;
            gap: 0.5rem 1rem;
            margin: 2rem 0;
            font-size: 0.875rem;
            color: var(--text-light);
        }

        /* CTA */
        .cta {
            padding: 5rem 0;
            text-align: center;
        }

        .cta-title {
            font-size: 1.5rem;
            font-weight: 400;
            margin-bottom: 1rem;
        }

        .cta-text {
            color: var(--text-light);
            margin-bottom: 2rem;
        }

        .cta-phone {
            font-size: 1.5rem;
            font-weight: 500;
            color: var(--text);
            display: block;
            margin-bottom: 0.5rem;
        }

        .cta-phone:hover {
            color: var(--accent);
        }

        .cta-hint {
            font-size: 0.8125rem;
            color: var(--text-light);
        }

        /* Footer */
        .footer {
            padding: 3rem 0;
            border-top: 1px solid var(--border);
            text-align: center;
            font-size: 0.8125rem;
            color: var(--text-light);
        }

        /* Responsive */
        @media (min-width: 768px) {
            html { font-size: 18px; }
            .header { padding: 3rem 1.5rem; }
            .hero-text h1 { font-size: 2.5rem; }
            .stats { gap: 4rem; }
            .section { padding: 5rem 0; }
        }
    </style>
</head>
