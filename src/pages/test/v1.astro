    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }

        :root {
            --bg: #FAFAFA;
            --text: #1A1A1A;
            --text-secondary: #666;
            --accent: #C17F4E;
            --accent-hover: #A66B3D;
            --white: #FFF;
            --border: #E5E5E5;
        }

        html { font-size: 16px; scroll-behavior: smooth; }
        body {
            font-family: 'Inter', -apple-system, sans-serif;
            color: var(--text);
            background: var(--bg);
            line-height: 1.5;
        }

        a { color: inherit; text-decoration: none; }
        img { max-width: 100%; height: auto; display: block; }

        /* Header — Ультра-минимал */
        .header {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 100;
            padding: 1rem 1.5rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: rgba(250,250,250,0.9);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
        }

        .logo {
            font-weight: 700;
            font-size: 1.125rem;
            letter-spacing: -0.02em;
        }

        .header-phone {
            font-weight: 600;
            font-size: 0.875rem;
            color: var(--text);
            padding: 0.5rem 1rem;
            border: 1px solid var(--border);
            border-radius: 100px;
            transition: all 0.2s;
        }

        .header-phone:hover {
            border-color: var(--accent);
            color: var(--accent);
        }

        /* Hero — Полноэкранный, чистый */
        .hero {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            padding: 6rem 1.5rem 3rem;
        }

        .hero-image {
            width: 100%;
            max-width: 600px;
            margin-bottom: 2.5rem;
            border-radius: 24px;
            overflow: hidden;
            box-shadow: 0 40px 80px rgba(0,0,0,0.1);
        }

        .hero-image img {
            width: 100%;
            aspect-ratio: 4/3;
            object-fit: cover;
        }

        .hero h1 {
            font-size: clamp(1.75rem, 5vw, 3rem);
            font-weight: 700;
            letter-spacing: -0.03em;
            line-height: 1.1;
            margin-bottom: 1rem;
            max-width: 600px;
        }

        .hero-price {
            font-size: 1.25rem;
            color: var(--text-secondary);
            margin-bottom: 2rem;
        }

        .hero-price strong {
            color: var(--text);
            font-weight: 600;
        }

        .btn-primary {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 1rem 2rem;
            background: var(--text);
            color: var(--white);
            font-weight: 600;
            font-size: 1rem;
            border-radius: 100px;
            transition: all 0.2s;
        }

        .btn-primary:hover {
            background: var(--accent);
            transform: translateY(-2px);
        }

        .btn-primary svg {
            transition: transform 0.2s;
        }

        .btn-primary:hover svg {
            transform: translateX(4px);
        }

        /* Trust badges — горизонтальная полоса */
        .trust-bar {
            display: flex;
            justify-content: center;
            gap: 2rem;
            padding: 1.5rem;
            margin-top: 3rem;
            border-top: 1px solid var(--border);
            width: 100%;
            max-width: 600px;
        }

        .trust-item {
            text-align: center;
        }

        .trust-number {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--text);
            letter-spacing: -0.02em;
        }

        .trust-label {
            font-size: 0.75rem;
            color: var(--text-secondary);
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        /* Products — Чистая сетка */
        .products {
            padding: 4rem 1.5rem;
            background: var(--white);
        }

        .section-header {
            text-align: center;
            margin-bottom: 3rem;
        }

        .section-header h2 {
            font-size: clamp(1.5rem, 4vw, 2rem);
            font-weight: 700;
            letter-spacing: -0.02em;
            margin-bottom: 0.5rem;
        }

        .section-header p {
            color: var(--text-secondary);
            font-size: 1rem;
        }

        .products-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 1.5rem;
            max-width: 1200px;
            margin: 0 auto;
        }

        .product-card {
            background: var(--bg);
            border-radius: 16px;
            overflow: hidden;
            transition: transform 0.3s, box-shadow 0.3s;
        }

        .product-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.08);
        }

        .product-card img {
            width: 100%;
            aspect-ratio: 4/3;
            object-fit: cover;
        }

        .product-info {
            padding: 1.25rem;
        }

        .product-size {
            font-size: 1.125rem;
            font-weight: 600;
            margin-bottom: 0.25rem;
        }

        .product-price {
            color: var(--accent);
            font-weight: 600;
        }

        /* Benefits — Иконки в ряд */
        .benefits {
            padding: 4rem 1.5rem;
            background: var(--bg);
        }

        .benefits-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 2rem;
            max-width: 900px;
            margin: 0 auto;
            text-align: center;
        }

        .benefit-icon {
            width: 48px;
            height: 48px;
            margin: 0 auto 1rem;
            background: var(--white);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--accent);
        }

        .benefit h3 {
            font-size: 1rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .benefit p {
            font-size: 0.875rem;
            color: var(--text-secondary);
        }

        /* CTA — Простой и четкий */
        .cta {
            padding: 4rem 1.5rem;
            text-align: center;
            background: var(--white);
        }

        .cta h2 {
            font-size: clamp(1.5rem, 4vw, 2rem);
            font-weight: 700;
            margin-bottom: 1rem;
        }

        .cta-phone {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--accent);
            display: block;
            margin-bottom: 0.5rem;
        }

        .cta-hint {
            font-size: 0.875rem;
            color: var(--text-secondary);
        }

        /* Footer — Минимальный */
        .footer {
            padding: 2rem 1.5rem;
            text-align: center;
            font-size: 0.875rem;
            color: var(--text-secondary);
            border-top: 1px solid var(--border);
        }

        /* Desktop */
        @media (min-width: 768px) {
            .header { padding: 1.25rem 3rem; }
            .hero { padding: 8rem 3rem 4rem; }
            .hero-image { max-width: 700px; }
            .trust-bar { gap: 4rem; }
            .products, .benefits, .cta { padding: 5rem 3rem; }
        }

        @media (min-width: 1024px) {
            .hero { flex-direction: row; gap: 4rem; text-align: left; }
            .hero-image { order: 2; max-width: 50%; }
            .hero-content { order: 1; max-width: 500px; }
            .trust-bar { justify-content: flex-start; width: auto; max-width: none; }
        }
    </style>
</head>
