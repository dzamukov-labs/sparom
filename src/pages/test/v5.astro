  </section>

  <!-- Stats -->
  <div class="stats-strip">
    <div class="stat-item">
      <div class="stat-number">3000+</div>
      <div class="stat-label">Бань установлено</div>
    </div>
    <div class="stat-item">
      <div class="stat-number">600 000</div>
      <div class="stat-label">Км доставки</div>
    </div>
    <div class="stat-item">
