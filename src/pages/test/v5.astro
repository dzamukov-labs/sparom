  { size: '2×3', price: '364 900 ₽', img: '/images/proekty/2-3x3/main.webp', link: '/proekty/2-3x3/' },
  { size: '2.5×3', price: '394 900 ₽', img: '/images/proekty/2-3x4/main.webp', link: '/proekty/2-3x4/' },
  { size: '3×3', price: '409 900 ₽', img: '/images/banya-winter-3.png', link: '/proekty/2-3x5/' },
  { size: '3.5×3', price: '449 900 ₽', img: '/images/proekty/2-3x6/main.webp', link: '/proekty/2-3x6/' },
  { size: '4×3', price: '459 900 ₽', img: '/images/banya-winter-1.png', link: '/proekty/2-3x7/' },
