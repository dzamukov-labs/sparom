---

<BaseLayout title="Бани-бочки под ключ — С лёгким паром">
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700;900&family=Source+Sans+3:wght@300;400;500;600&display=swap');

    :root {
      --bg: #FAFAF8;
      --bg-dark: #1A1A1A;
      --text: #1A1A1A;
      --text-light: #666666;
      --accent: #C45C26;
      --serif: 'Playfair Display', Georgia, serif;
      --sans: 'Source Sans 3', -apple-system, sans-serif;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: var(--sans);
      background: var(--bg);
      color: var(--text);
      line-height: 1.6;
      font-weight: 300;
    }

    a {
      color: inherit;
      text-decoration: none;
    }

    img {
      max-width: 100%;
      height: auto;
      display: block;
    }

    /* Header - Magazine masthead */
    .masthead {
      padding: 20px 40px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      border-bottom: 1px solid #E5E5E5;
    }

    .masthead-logo {
      font-family: var(--serif);
      font-size: 1.5rem;
      font-weight: 700;
      letter-spacing: -0.02em;
    }

    .masthead-nav {
      display: flex;
      gap: 32px;
      font-size: 0.875rem;
      font-weight: 500;
      text-transform: uppercase;
      letter-spacing: 0.1em;
    }

    .masthead-nav a:hover {
      color: var(--accent);
    }

    .masthead-phone {
      font-weight: 500;
    }

    /* Hero - Magazine cover */
    .cover {
      display: grid;
      grid-template-columns: 1fr 1fr;
      min-height: 90vh;
    }

    .cover-text {
      padding: 80px 60px;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    .cover-label {
      font-size: 0.75rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.2em;
      color: var(--accent);
      margin-bottom: 24px;
    }

    .cover h1 {
      font-family: var(--serif);
      font-size: clamp(2.5rem, 5vw, 4.5rem);
      font-weight: 400;
      line-height: 1.1;
      letter-spacing: -0.02em;
      margin-bottom: 32px;
    }

    .cover h1 em {
      font-style: italic;
    }

    .cover-subtitle {
      font-size: 1.25rem;
      color: var(--text-light);
      max-width: 400px;
      margin-bottom: 48px;
      font-weight: 300;
    }

    .cover-cta {
      display: inline-flex;
      align-items: center;
      gap: 12px;
      font-size: 0.875rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.15em;
      border-bottom: 2px solid var(--text);
      padding-bottom: 8px;
      transition: all 0.3s;
    }

    .cover-cta:hover {
      border-color: var(--accent);
      color: var(--accent);
    }

    .cover-image {
      position: relative;
      overflow: hidden;
    }

    .cover-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .cover-image-caption {
      position: absolute;
      bottom: 40px;
      left: 40px;
      background: white;
      padding: 16px 24px;
      font-size: 0.875rem;
    }

    .cover-image-caption strong {
      display: block;
      font-weight: 600;
    }

    /* Stats strip */
    .stats-strip {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      border-top: 1px solid #E5E5E5;
      border-bottom: 1px solid #E5E5E5;
    }

    .stat-item {
      padding: 40px;
      text-align: center;
      border-right: 1px solid #E5E5E5;
    }

    .stat-item:last-child {
      border-right: none;
    }

    .stat-number {
      font-family: var(--serif);
      font-size: 3rem;
      font-weight: 400;
      margin-bottom: 8px;
    }

    .stat-label {
      font-size: 0.75rem;
      text-transform: uppercase;
      letter-spacing: 0.15em;
      color: var(--text-light);
    }

    /* Editorial section */
    .editorial {
      display: grid;
      grid-template-columns: 1fr 2fr;
      gap: 80px;
      padding: 100px 60px;
      max-width: 1400px;
      margin: 0 auto;
    }

    .editorial-sidebar {
      position: sticky;
      top: 100px;
      height: fit-content;
    }

    .section-label {
      font-size: 0.75rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.2em;
      color: var(--accent);
      margin-bottom: 16px;
    }

    .section-title {
      font-family: var(--serif);
      font-size: 2.5rem;
      font-weight: 400;
      line-height: 1.2;
      margin-bottom: 24px;
    }

    .section-intro {
      font-size: 1rem;
      color: var(--text-light);
      line-height: 1.8;
    }

    /* Project grid - Magazine layout */
    .project-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 40px;
    }

    .project-item {
      display: block;
    }

    .project-item:nth-child(1) {
      grid-column: span 2;
    }

    .project-item:nth-child(1) .project-image {
      height: 500px;
    }

    .project-image {
      height: 300px;
      overflow: hidden;
      margin-bottom: 20px;
    }

    .project-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.6s ease;
    }

    .project-item:hover .project-image img {
      transform: scale(1.03);
    }

    .project-meta {
      display: flex;
      justify-content: space-between;
      align-items: baseline;
    }

    .project-size {
      font-family: var(--serif);
      font-size: 1.5rem;
    }

    .project-price {
      font-size: 1rem;
      color: var(--text-light);
    }

    /* Pull quote */
    .pullquote {
      padding: 100px 60px;
      background: var(--bg-dark);
      color: white;
    }

    .pullquote-inner {
      max-width: 1000px;
      margin: 0 auto;
      text-align: center;
    }

    .pullquote-mark {
      font-family: var(--serif);
      font-size: 6rem;
      line-height: 1;
      color: var(--accent);
      margin-bottom: -20px;
    }

    .pullquote-text {
      font-family: var(--serif);
      font-size: clamp(1.5rem, 3vw, 2.5rem);
      font-weight: 400;
      font-style: italic;
      line-height: 1.4;
      margin-bottom: 40px;
    }

    .pullquote-author {
      font-size: 0.875rem;
      text-transform: uppercase;
      letter-spacing: 0.15em;
      opacity: 0.7;
    }

    /* Benefits - Magazine article style */
    .benefits {
      padding: 100px 60px;
      max-width: 900px;
      margin: 0 auto;
    }

    .benefits-header {
      text-align: center;
      margin-bottom: 80px;
    }

    .benefits-grid {
      display: grid;
      gap: 60px;
    }

    .benefit-item {
      display: grid;
      grid-template-columns: 120px 1fr;
      gap: 40px;
      align-items: start;
    }

    .benefit-number {
      font-family: var(--serif);
      font-size: 4rem;
      font-weight: 400;
      color: var(--accent);
      line-height: 1;
    }

    .benefit-content h3 {
      font-family: var(--serif);
      font-size: 1.5rem;
      font-weight: 400;
      margin-bottom: 12px;
    }

    .benefit-content p {
      color: var(--text-light);
      line-height: 1.8;
    }

    /* Reviews - Testimonials */
    .reviews {
      padding: 100px 60px;
      background: #F0EDE8;
    }

    .reviews-header {
      text-align: center;
      margin-bottom: 60px;
    }

    .reviews-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 40px;
      max-width: 1200px;
      margin: 0 auto;
    }

    .review-item {
      background: white;
      padding: 40px;
    }

    .review-text {
      font-size: 1rem;
      line-height: 1.8;
      margin-bottom: 24px;
      font-style: italic;
    }

    .review-author {
      font-size: 0.875rem;
    }

    .review-author strong {
      display: block;
      font-weight: 600;
      margin-bottom: 4px;
    }

    .review-author span {
      color: var(--text-light);
    }

    /* Geography */
    .geography {
      padding: 100px 60px;
    }

    .geography-inner {
      max-width: 1000px;
      margin: 0 auto;
      text-align: center;
    }

    .geography h2 {
      font-family: var(--serif);
      font-size: 2rem;
      font-weight: 400;
      margin-bottom: 40px;
    }

    .geography-list {
      font-size: 1rem;
      color: var(--text-light);
      line-height: 2;
    }

    /* CTA - Magazine subscription style */
    .cta {
      padding: 80px 60px;
      background: var(--bg-dark);
      color: white;
      text-align: center;
    }

    .cta h2 {
      font-family: var(--serif);
      font-size: 2rem;
      font-weight: 400;
      margin-bottom: 16px;
    }

    .cta p {
      opacity: 0.7;
      margin-bottom: 32px;
    }

    .cta-phone {
      font-family: var(--serif);
      font-size: 2.5rem;
      font-weight: 400;
      display: block;
      margin-bottom: 8px;
      transition: color 0.3s;
    }

    .cta-phone:hover {
      color: var(--accent);
    }

    .cta-hint {
      font-size: 0.875rem;
      opacity: 0.5;
    }

    /* Footer - Magazine colophon */
    .colophon {
      padding: 40px 60px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      border-top: 1px solid #E5E5E5;
      font-size: 0.875rem;
      color: var(--text-light);
    }

    .colophon-links {
      display: flex;
      gap: 32px;
    }

    .colophon-links a:hover {
      color: var(--accent);
    }

    /* Mobile responsive */
    @media (max-width: 1024px) {
      .cover {
        grid-template-columns: 1fr;
        min-height: auto;
      }

      .cover-text {
        padding: 60px 40px;
        order: 2;
      }

      .cover-image {
        height: 50vh;
        order: 1;
      }

      .editorial {
        grid-template-columns: 1fr;
        gap: 40px;
        padding: 60px 40px;
      }

      .editorial-sidebar {
        position: static;
      }

      .reviews-grid {
        grid-template-columns: 1fr;
      }
    }

    @media (max-width: 768px) {
      .masthead {
        padding: 16px 24px;
        flex-direction: column;
        gap: 16px;
      }

      .masthead-nav {
        display: none;
      }

      .stats-strip {
        grid-template-columns: repeat(2, 1fr);
      }

      .stat-item {
        padding: 24px;
      }

      .stat-item:nth-child(2) {
        border-right: none;
      }

      .stat-item:nth-child(3),
      .stat-item:nth-child(4) {
        border-top: 1px solid #E5E5E5;
      }

      .stat-number {
        font-size: 2rem;
      }

      .project-grid {
        grid-template-columns: 1fr;
      }

      .project-item:nth-child(1) {
        grid-column: span 1;
      }

      .project-item:nth-child(1) .project-image {
        height: 300px;
      }

      .benefit-item {
        grid-template-columns: 1fr;
        gap: 16px;
      }

      .benefit-number {
        font-size: 2.5rem;
      }

      .pullquote {
        padding: 60px 24px;
      }

      .benefits,
      .reviews,
      .geography {
        padding: 60px 24px;
      }

      .colophon {
        flex-direction: column;
        gap: 24px;
        text-align: center;
        padding: 40px 24px;
      }
    }
  </style>

  <!-- Masthead -->
