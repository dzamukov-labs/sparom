        document.querySelectorAll('.review-dot').forEach(dot => {
            dot.addEventListener('click', () => {
                const idx = parseInt(dot.dataset.index);
                document.getElementById('review-text').textContent = reviews[idx].text;
                document.getElementById('review-author').textContent = reviews[idx].author;
                document.querySelectorAll('.review-dot').forEach(d => d.classList.remove('active'));
                dot.classList.add('active');
            });
        });

        // Nav dots active state
        const sections = document.querySelectorAll('.screen');
        const navDots = document.querySelectorAll('.nav-dot');

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const idx = Array.from(sections).indexOf(entry.target);
                    navDots.forEach((dot, i) => {
                        dot.classList.toggle('active', i === idx);
                    });
                }
            });
        }, { threshold: 0.5 });

        sections.forEach(section => observer.observe(section));
    </script>
