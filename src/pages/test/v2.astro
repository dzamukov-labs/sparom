    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@400;700&family=Open+Sans:wght@400;500;600&display=swap" rel="stylesheet">
    <style>
        *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }

        :root {
            --bg: #FBF9F7;
            --bg-warm: #F5EDE4;
            --text: #2D241C;
            --text-secondary: #6B5D4D;
            --accent: #9B5F3C;
            --accent-light: #D4A574;
            --white: #FFFFFF;
            --border: #E5DDD4;
        }

        html { font-size: 16px; scroll-behavior: smooth; }
        body {
            font-family: 'Open Sans', sans-serif;
            color: var(--text);
            background: var(--bg);
            line-height: 1.7;
        }

        h1, h2, h3 { font-family: 'Merriweather', Georgia, serif; }
        a { color: inherit; text-decoration: none; }
        img { max-width: 100%; height: auto; display: block; }

        /* Header — Тёплый, домашний */
        .header {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 100;
            padding: 1rem 1.5rem;
            background: rgba(251,249,247,0.95);
            backdrop-filter: blur(8px);
            -webkit-backdrop-filter: blur(8px);
            border-bottom: 1px solid var(--border);
        }

        .header-inner {
            max-width: 1200px;
            margin: 0 auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo {
            font-family: 'Merriweather', serif;
            font-weight: 700;
            font-size: 1.125rem;
            color: var(--accent);
        }

        .header-phone {
            font-weight: 600;
            font-size: 0.9rem;
            color: var(--text);
        }

        .header-phone span {
            display: none;
        }

        /* Hero — Эмоциональный, с историей */
        .hero {
            min-height: 100vh;
            padding: 7rem 1.5rem 4rem;
            background: linear-gradient(135deg, var(--bg) 0%, var(--bg-warm) 100%);
            display: flex;
            align-items: center;
        }

        .hero-inner {
            max-width: 1200px;
            margin: 0 auto;
            display: grid;
            gap: 3rem;
        }

        .hero-content {
            order: 2;
        }

        .hero-tagline {
            font-family: 'Merriweather', serif;
            font-size: 0.875rem;
            color: var(--accent);
            text-transform: uppercase;
            letter-spacing: 0.1em;
            margin-bottom: 1rem;
        }

        .hero h1 {
            font-size: clamp(1.75rem, 5vw, 3rem);
            font-weight: 700;
            line-height: 1.3;
            margin-bottom: 1.5rem;
            color: var(--text);
        }

        .hero-text {
            font-size: 1.125rem;
            color: var(--text-secondary);
            margin-bottom: 2rem;
            max-width: 520px;
        }

        .hero-cta {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
            align-items: center;
        }

        .btn-warm {
            display: inline-flex;
            align-items: center;
            gap: 0.75rem;
            padding: 1rem 2rem;
            background: var(--accent);
            color: var(--white);
            font-weight: 600;
            font-size: 1rem;
            border-radius: 8px;
            transition: all 0.3s;
        }

        .btn-warm:hover {
            background: #7A4A2E;
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(155,95,60,0.25);
        }

        .btn-outline {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 1rem 1.5rem;
            background: transparent;
            color: var(--text);
            font-weight: 500;
            border: 2px solid var(--border);
            border-radius: 8px;
            transition: all 0.3s;
        }

        .btn-outline:hover {
            border-color: var(--accent);
            color: var(--accent);
        }

        .hero-image {
            order: 1;
            position: relative;
        }

        .hero-image img {
            border-radius: 20px;
            box-shadow: 0 30px 60px rgba(45,36,28,0.15);
        }

        .hero-badge {
            position: absolute;
            bottom: -1rem;
            right: 1rem;
            background: var(--white);
            padding: 1rem 1.5rem;
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            text-align: center;
        }

        .hero-badge-number {
            font-family: 'Merriweather', serif;
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--accent);
        }

        .hero-badge-text {
            font-size: 0.75rem;
            color: var(--text-secondary);
        }

        /* Story Section */
        .story {
            padding: 5rem 1.5rem;
            background: var(--white);
        }

        .story-inner {
            max-width: 800px;
            margin: 0 auto;
            text-align: center;
        }

        .story h2 {
            font-size: clamp(1.5rem, 4vw, 2.25rem);
            margin-bottom: 1.5rem;
            color: var(--text);
        }

        .story-text {
            font-size: 1.125rem;
            color: var(--text-secondary);
            line-height: 1.8;
            margin-bottom: 2rem;
        }

        .story-highlight {
            display: inline-block;
            background: var(--bg-warm);
            padding: 0.25rem 0.75rem;
            border-radius: 4px;
            color: var(--accent);
            font-weight: 600;
        }

        .story-founder {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 1rem;
            margin-top: 2rem;
            padding-top: 2rem;
            border-top: 1px solid var(--border);
        }

        .founder-photo {
            width: 64px;
            height: 64px;
            border-radius: 50%;
            background: var(--bg-warm);
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Merriweather', serif;
            font-weight: 700;
            color: var(--accent);
        }

        .founder-name {
            font-weight: 600;
            color: var(--text);
        }

        .founder-role {
            font-size: 0.875rem;
            color: var(--text-secondary);
        }

        /* Benefits — Карточки с иллюстрациями */
        .benefits {
            padding: 5rem 1.5rem;
            background: var(--bg);
        }

        .benefits-inner {
            max-width: 1100px;
            margin: 0 auto;
        }

        .benefits h2 {
            text-align: center;
            font-size: clamp(1.5rem, 4vw, 2rem);
            margin-bottom: 3rem;
        }

        .benefits-grid {
            display: grid;
            gap: 2rem;
        }

        .benefit-card {
            background: var(--white);
            padding: 2rem;
            border-radius: 16px;
            display: flex;
            gap: 1.5rem;
            align-items: flex-start;
            box-shadow: 0 4px 20px rgba(0,0,0,0.04);
        }

        .benefit-icon {
            width: 56px;
            height: 56px;
            flex-shrink: 0;
            background: var(--bg-warm);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--accent);
        }

        .benefit-card h3 {
            font-size: 1.125rem;
            margin-bottom: 0.5rem;
            font-family: 'Open Sans', sans-serif;
            font-weight: 600;
        }

        .benefit-card p {
            color: var(--text-secondary);
            font-size: 0.9375rem;
        }

        /* Products */
        .products {
            padding: 5rem 1.5rem;
            background: var(--white);
        }

        .products-inner {
            max-width: 1200px;
            margin: 0 auto;
        }

        .products-header {
            text-align: center;
            margin-bottom: 3rem;
        }

        .products-header h2 {
            font-size: clamp(1.5rem, 4vw, 2rem);
            margin-bottom: 0.75rem;
        }

        .products-header p {
            color: var(--text-secondary);
        }

        .products-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 1.5rem;
        }

        .product-card {
            background: var(--bg);
            border-radius: 16px;
            overflow: hidden;
            transition: transform 0.3s, box-shadow 0.3s;
        }

        .product-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 20px 50px rgba(0,0,0,0.1);
        }

        .product-card img {
            width: 100%;
            aspect-ratio: 4/3;
            object-fit: cover;
        }

        .product-info {
            padding: 1.25rem;
        }

        .product-size {
            font-family: 'Merriweather', serif;
            font-size: 1.125rem;
            font-weight: 700;
            margin-bottom: 0.25rem;
        }

        .product-desc {
            font-size: 0.875rem;
            color: var(--text-secondary);
            margin-bottom: 0.5rem;
        }

        .product-price {
            color: var(--accent);
            font-weight: 600;
        }

        /* Quote */
        .quote {
            padding: 5rem 1.5rem;
            background: var(--bg-warm);
            text-align: center;
        }

        .quote-inner {
            max-width: 700px;
            margin: 0 auto;
        }

        .quote-text {
            font-family: 'Merriweather', serif;
            font-size: clamp(1.25rem, 3vw, 1.75rem);
            font-style: italic;
            line-height: 1.6;
            color: var(--text);
            margin-bottom: 1.5rem;
        }

        .quote-author {
            font-size: 0.9375rem;
            color: var(--text-secondary);
        }

        /* CTA */
        .cta {
            padding: 5rem 1.5rem;
            background: var(--white);
            text-align: center;
        }

        .cta-inner {
            max-width: 600px;
            margin: 0 auto;
        }

        .cta h2 {
            font-size: clamp(1.5rem, 4vw, 2rem);
            margin-bottom: 1rem;
        }

        .cta p {
            color: var(--text-secondary);
            margin-bottom: 2rem;
        }

        .cta-phone {
            font-family: 'Merriweather', serif;
            font-size: 2rem;
            font-weight: 700;
            color: var(--accent);
            display: block;
            margin-bottom: 0.5rem;
        }

        .cta-hint {
            font-size: 0.875rem;
            color: var(--text-secondary);
        }

        /* Footer */
        .footer {
            padding: 2rem 1.5rem;
            background: var(--bg);
            text-align: center;
            font-size: 0.875rem;
            color: var(--text-secondary);
        }

        /* Responsive */
        @media (min-width: 768px) {
            .header { padding: 1rem 3rem; }
            .header-phone span { display: inline; }
            .hero { padding: 8rem 3rem 5rem; }
            .hero-inner { grid-template-columns: 1fr 1fr; align-items: center; }
            .hero-content { order: 1; }
            .hero-image { order: 2; }
            .benefits-grid { grid-template-columns: repeat(2, 1fr); }
        }

        @media (min-width: 1024px) {
            .hero-inner { gap: 4rem; }
        }
    </style>
</head>
