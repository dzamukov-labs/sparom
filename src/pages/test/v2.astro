    <style>
        *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }

        :root {
            --bg: #0A0A0A;
            --bg-light: #141414;
            --text: #FFFFFF;
            --text-muted: #888888;
            --accent: #E07A5F;
            --accent-light: #F2CC8F;
        }

        html {
            font-size: 16px;
            scroll-snap-type: y mandatory;
            scroll-behavior: smooth;
        }

        body {
            font-family: 'Noto Sans JP', -apple-system, sans-serif;
            font-weight: 300;
            color: var(--text);
            background: var(--bg);
            line-height: 1.6;
            overflow-x: hidden;
        }

        a { color: inherit; text-decoration: none; }
        img { max-width: 100%; height: auto; display: block; }

        /* Каждая секция = полный экран */
        .screen {
            min-height: 100vh;
            scroll-snap-align: start;
            scroll-snap-stop: always;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            padding: 2rem;
        }

        /* Навигация точками */
        .nav-dots {
            position: fixed;
            right: 1.5rem;
            top: 50%;
            transform: translateY(-50%);
            z-index: 100;
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .nav-dot {
            width: 10px;
            height: 10px;
            border: 1px solid var(--text-muted);
            border-radius: 50%;
            background: transparent;
            cursor: pointer;
            transition: all 0.3s;
        }

        .nav-dot:hover,
        .nav-dot.active {
            background: var(--accent);
            border-color: var(--accent);
        }

        /* Header плавающий */
        .header {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 100;
            padding: 1.5rem 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo {
            font-weight: 500;
            font-size: 0.875rem;
            letter-spacing: 0.1em;
            text-transform: uppercase;
        }

        .header-phone {
            font-size: 0.875rem;
            color: var(--text-muted);
            transition: color 0.3s;
        }

        .header-phone:hover {
            color: var(--accent);
        }

        /* Screen 1: Hero */
        .screen-hero {
            background: var(--bg);
        }

        .hero-bg {
            position: absolute;
            inset: 0;
            z-index: 0;
        }

        .hero-bg img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            opacity: 0.5;
        }

        .hero-content {
            position: relative;
            z-index: 1;
            text-align: center;
            max-width: 800px;
        }

        .hero-content h1 {
            font-size: clamp(2rem, 6vw, 4rem);
            font-weight: 300;
            line-height: 1.2;
            margin-bottom: 1.5rem;
            letter-spacing: -0.02em;
        }

        .hero-content p {
            font-size: 1.125rem;
            color: var(--text-muted);
            margin-bottom: 3rem;
        }

        .hero-stats {
            display: flex;
            justify-content: center;
            gap: 4rem;
            margin-top: 4rem;
        }

        .hero-stat {
            text-align: center;
        }

        .hero-stat-number {
            font-size: 2rem;
            font-weight: 500;
            color: var(--accent);
        }

        .hero-stat-label {
            font-size: 0.75rem;
            color: var(--text-muted);
            text-transform: uppercase;
            letter-spacing: 0.1em;
        }

        .scroll-hint {
            position: absolute;
            bottom: 3rem;
            left: 50%;
            transform: translateX(-50%);
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 0.5rem;
            color: var(--text-muted);
            font-size: 0.75rem;
            letter-spacing: 0.1em;
            animation: bounce 2s infinite;
        }

        @keyframes bounce {
            0%, 100% { transform: translateX(-50%) translateY(0); }
            50% { transform: translateX(-50%) translateY(10px); }
        }

        /* Screen 2: Projects carousel */
        .screen-projects {
            background: var(--bg-light);
            flex-direction: column;
            padding: 6rem 2rem 2rem;
        }

        .screen-title {
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 0.2em;
            color: var(--accent);
            margin-bottom: 0.5rem;
            text-align: center;
        }

        .screen-heading {
            font-size: clamp(1.5rem, 4vw, 2.5rem);
            font-weight: 300;
            text-align: center;
            margin-bottom: 0.75rem;
        }

        .screen-subheading {
            color: var(--text-muted);
            text-align: center;
            margin-bottom: 3rem;
        }

        .projects-scroll {
            display: flex;
            gap: 1.5rem;
            overflow-x: auto;
            padding: 1rem 0;
            scroll-snap-type: x mandatory;
            -webkit-overflow-scrolling: touch;
            max-width: 100%;
        }

        .projects-scroll::-webkit-scrollbar {
            display: none;
        }

        .project-card {
            flex: 0 0 300px;
            scroll-snap-align: center;
            background: var(--bg);
            border-radius: 8px;
            overflow: hidden;
            transition: transform 0.3s;
        }

        .project-card:hover {
            transform: scale(1.02);
        }

        .project-card img {
            width: 100%;
            aspect-ratio: 4/3;
            object-fit: cover;
        }

        .project-card-info {
            padding: 1rem;
        }

        .project-card-size {
            font-weight: 500;
            margin-bottom: 0.25rem;
        }

        .project-card-price {
            color: var(--accent);
            font-size: 0.9375rem;
        }

        .project-card-badge {
            display: inline-block;
            font-size: 0.625rem;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            padding: 0.25rem 0.5rem;
            background: var(--accent);
            color: var(--bg);
            border-radius: 2px;
            margin-left: 0.5rem;
        }

        /* Screen 3: Benefits */
        .screen-benefits {
            background: var(--bg);
        }

        .benefits-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 3rem;
            max-width: 800px;
        }

        .benefit-item {
            text-align: center;
        }

        .benefit-number {
            font-size: 4rem;
            font-weight: 500;
            color: var(--accent);
            line-height: 1;
            margin-bottom: 0.25rem;
        }

        .benefit-label {
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            color: var(--text-muted);
            margin-bottom: 1rem;
        }

        .benefit-text {
            color: var(--text-muted);
            font-size: 0.9375rem;
            line-height: 1.7;
        }

        /* Screen 4: Reviews */
        .screen-reviews {
            background: var(--bg-light);
            flex-direction: column;
        }

        .review-big {
            max-width: 700px;
            text-align: center;
        }

        .review-quote {
            font-size: clamp(1.25rem, 3vw, 1.75rem);
            font-weight: 300;
            line-height: 1.6;
            margin-bottom: 2rem;
            font-style: italic;
        }

        .review-quote::before {
            content: '«';
            color: var(--accent);
        }

        .review-quote::after {
            content: '»';
            color: var(--accent);
        }

        .review-author {
            color: var(--text-muted);
            font-size: 0.875rem;
        }

        .reviews-nav {
            display: flex;
            gap: 1rem;
            margin-top: 2rem;
        }

        .review-dot {
            width: 8px;
            height: 8px;
            border-radius: 50%;
            background: var(--text-muted);
            cursor: pointer;
            transition: background 0.3s;
        }

        .review-dot.active {
            background: var(--accent);
        }

        /* Screen 5: Geography */
        .screen-geography {
            background: var(--bg);
            flex-direction: column;
        }

        .geo-stats {
            display: flex;
            gap: 4rem;
            margin: 3rem 0;
            flex-wrap: wrap;
            justify-content: center;
        }

        .geo-stat {
            text-align: center;
        }

        .geo-stat-number {
            font-size: 3rem;
            font-weight: 500;
            color: var(--accent-light);
        }

        .geo-stat-label {
            font-size: 0.75rem;
            color: var(--text-muted);
            text-transform: uppercase;
            letter-spacing: 0.1em;
        }

        .geo-regions {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
            justify-content: center;
            max-width: 600px;
        }

        .geo-region {
            padding: 0.5rem 1rem;
            border: 1px solid var(--text-muted);
            border-radius: 100px;
            font-size: 0.8125rem;
            color: var(--text-muted);
            transition: all 0.3s;
        }

        .geo-region:hover {
            border-color: var(--accent);
            color: var(--accent);
        }

        /* Screen 6: CTA */
        .screen-cta {
            background: linear-gradient(135deg, var(--accent) 0%, #C1666B 100%);
            flex-direction: column;
            text-align: center;
        }

        .cta-title {
            font-size: clamp(2rem, 5vw, 3rem);
            font-weight: 300;
            margin-bottom: 1rem;
        }

        .cta-text {
            opacity: 0.9;
            margin-bottom: 3rem;
            max-width: 500px;
        }

        .cta-phone {
            font-size: 2.5rem;
            font-weight: 500;
            color: var(--text);
            display: block;
            margin-bottom: 0.5rem;
            transition: opacity 0.3s;
        }

        .cta-phone:hover {
            opacity: 0.8;
        }

        .cta-hint {
            font-size: 0.875rem;
            opacity: 0.8;
        }

        .cta-footer {
            position: absolute;
            bottom: 2rem;
            font-size: 0.75rem;
            opacity: 0.6;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .nav-dots { display: none; }
            .hero-stats { gap: 2rem; flex-wrap: wrap; }
            .benefits-grid { grid-template-columns: 1fr; gap: 2rem; }
            .geo-stats { gap: 2rem; }
            .project-card { flex: 0 0 260px; }
        }
    </style>
</head>
