            padding: 5rem 0;
            background: var(--bg-section);
        }

        .section-header {
            text-align: center;
            margin-bottom: 3rem;
        }

        .section-title {
            font-size: clamp(1.5rem, 4vw, 2.25rem);
            font-weight: 700;
            margin-bottom: 0.75rem;
        }

        .section-subtitle {
            font-size: 1rem;
            color: var(--text-light);
            max-width: 500px;
            margin: 0 auto;
        }

        .projects-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 1.5rem;
        }

        .project-card {
            background: var(--white);
            border-radius: 12px;
            overflow: hidden;
            transition: transform 0.3s, box-shadow 0.3s;
        }

        .project-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 20px 40px rgba(44,36,32,0.1);
        }

        .project-card img {
            width: 100%;
            aspect-ratio: 4/3;
            object-fit: cover;
        }

        .project-info {
            padding: 1.25rem;
        }

        .project-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 0.25rem;
        }

        .project-size {
            font-size: 1.125rem;
            font-weight: 600;
        }

        .project-badge {
            font-size: 0.6875rem;
            font-weight: 600;
            padding: 0.25rem 0.5rem;
            background: var(--bg-section);
            color: var(--text-light);
            border-radius: 4px;
        }

        .project-badge.accent {
            background: var(--accent);
            color: var(--white);
        }

        .project-price {
            color: var(--accent);
            font-weight: 600;
        }

        /* Why Us */
        .why-us {
            padding: 5rem 0;
            background: var(--bg);
        }

        .benefits-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
            gap: 2rem;
        }

        .benefit-card {
            text-align: center;
            padding: 2rem 1.5rem;
            background: var(--white);
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(44,36,32,0.04);
        }

        .benefit-number {
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--accent);
            line-height: 1;
        }

        .benefit-label {
            font-size: 0.875rem;
            color: var(--text-light);
            margin-bottom: 1rem;
        }

        .benefit-text {
            font-size: 0.9375rem;
            color: var(--text-light);
            line-height: 1.6;
        }

        /* Reviews */
        .reviews {
            padding: 5rem 0;
            background: var(--bg-section);
        }

        .reviews-grid {
            display: grid;
            gap: 1.5rem;
        }

        .review-card {
            background: var(--white);
            padding: 1.5rem;
            border-radius: 12px;
        }

        .review-header {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 1rem;
        }

        .review-avatar {
            width: 48px;
            height: 48px;
            background: var(--bg-section);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            color: var(--text-light);
        }

        .review-info {
            flex: 1;
        }

        .review-name {
            font-weight: 600;
            display: block;
        }

        .review-location {
            font-size: 0.8125rem;
            color: var(--text-light);
        }

        .review-rating {
            display: flex;
            gap: 2px;
            color: var(--accent);
        }

        .review-text {
            color: var(--text-light);
            line-height: 1.7;
            margin-bottom: 1rem;
        }

        .review-date {
            font-size: 0.8125rem;
            color: var(--text-light);
        }

        .reviews-footer {
            text-align: center;
            margin-top: 2rem;
        }

        /* Geography */
        .geography {
            padding: 5rem 0;
            background: var(--bg-dark);
            color: var(--text-on-dark);
        }

        .geography .section-title {
            color: var(--white);
        }

        .geography .section-subtitle {
            color: var(--text-on-dark-muted);
        }

        .geography-stats {
            display: flex;
            justify-content: center;
            gap: 3rem;
            flex-wrap: wrap;
            margin: 3rem 0;
        }

        .geography-stat {
            text-align: center;
        }

        .geography-stat-number {
            font-size: 2rem;
            font-weight: 700;
            color: var(--accent);
        }

        .geography-stat-label {
            font-size: 0.875rem;
            color: var(--text-on-dark-muted);
        }

        .geography-regions {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 0.75rem;
            margin-bottom: 2rem;
        }

        .geography-region {
            padding: 0.5rem 1rem;
            background: rgba(255,255,255,0.1);
            border-radius: 100px;
            font-size: 0.875rem;
            color: var(--text-on-dark-muted);
        }

        .geography-cta {
            text-align: center;
        }

        .btn-on-dark {
            background: transparent;
            color: var(--white);
            border: 2px solid rgba(255,255,255,0.3);
        }

        .btn-on-dark:hover {
            background: var(--white);
            color: var(--text);
            border-color: var(--white);
        }

        /* Final CTA */
        .final-cta {
            padding: 5rem 0;
            background: var(--bg);
        }

        .cta-box {
            background: linear-gradient(135deg, var(--bg-dark) 0%, #3D322C 100%);
            border-radius: 24px;
            padding: 3rem 2rem;
            text-align: center;
            color: var(--white);
        }

        .cta-box h2 {
            font-size: clamp(1.5rem, 4vw, 2rem);
            margin-bottom: 1rem;
        }

        .cta-box p {
            color: var(--text-on-dark-muted);
            max-width: 500px;
            margin: 0 auto 2rem;
        }

        .cta-phone {
            display: inline-flex;
            align-items: center;
            gap: 0.75rem;
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--white);
            margin-bottom: 0.5rem;
        }

        .cta-phone:hover {
            color: var(--accent);
        }

        .cta-phone svg {
            color: var(--accent);
        }

        .cta-hint {
            font-size: 0.875rem;
            color: var(--text-on-dark-muted);
        }

        /* Footer */
        .footer {
            padding: 2rem 0;
            background: var(--bg-dark);
            text-align: center;
            border-top: 1px solid rgba(255,255,255,0.1);
        }

        .footer p {
            font-size: 0.875rem;
            color: var(--text-on-dark-muted);
        }

        /* Responsive */
        @media (min-width: 768px) {
            .container { padding: 0 2rem; }
            .header { padding: 1.25rem 2rem; }
            .header-nav { display: flex; }
            .hero-content { padding: 10rem 2rem 6rem; }
            .reviews-grid { grid-template-columns: repeat(2, 1fr); }
        }

        @media (min-width: 1024px) {
            .hero h1 { max-width: 600px; }
            .reviews-grid { grid-template-columns: repeat(3, 1fr); }
            .cta-box { padding: 4rem 3rem; }
        }
    </style>
</head>
