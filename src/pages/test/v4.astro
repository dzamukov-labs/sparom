        *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }

        :root {
            --bg: #FAF8F5;
            --bg-dark: #2C2420;
            --bg-section: #F5F0EB;
            --text: #2C2420;
            --text-light: #6B5D4D;
            --text-on-dark: #FAF8F5;
            --text-on-dark-muted: #B8AFA6;
            --accent: #C17F4E;
            --accent-hover: #A66B3D;
            --white: #FFFFFF;
            --border: #E5DDD4;
        }

        html { font-size: 16px; scroll-behavior: smooth; }
        body {
            font-family: 'Montserrat', -apple-system, sans-serif;
            color: var(--text);
            background: var(--bg);
            line-height: 1.6;
        }

        a { color: inherit; text-decoration: none; }
        img { max-width: 100%; height: auto; display: block; }

        .container {
            max-width: 1280px;
            margin: 0 auto;
            padding: 0 1.25rem;
        }

        /* Header — Прозрачный на hero */
        .header {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 100;
            padding: 1rem 1.25rem;
            transition: background 0.3s, box-shadow 0.3s;
        }

        .header.scrolled {
            background: var(--bg);
            box-shadow: 0 2px 20px rgba(44,36,32,0.08);
        }

        .header-inner {
            max-width: 1280px;
            margin: 0 auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo {
            font-size: 1.125rem;
            font-weight: 700;
            color: var(--white);
            transition: color 0.3s;
        }

        .header.scrolled .logo {
            color: var(--text);
        }

        .header-nav {
            display: none;
            gap: 2rem;
        }

        .header-nav a {
            font-size: 0.875rem;
            font-weight: 500;
            color: var(--text-on-dark-muted);
            transition: color 0.3s;
        }

        .header-nav a:hover {
            color: var(--white);
        }

        .header.scrolled .header-nav a {
            color: var(--text-light);
        }

        .header.scrolled .header-nav a:hover {
            color: var(--accent);
        }

        .header-phone {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-weight: 600;
            font-size: 0.9375rem;
            color: var(--white);
            transition: color 0.3s;
        }

        .header.scrolled .header-phone {
            color: var(--text);
        }

        .header-phone:hover {
            color: var(--accent);
        }

        .header-phone svg {
            color: var(--accent);
        }

        /* Hero — Фото на фоне */
        .hero {
            min-height: 100vh;
            display: flex;
            align-items: center;
            position: relative;
            overflow: hidden;
            background: var(--bg-dark);
        }

        .hero-bg {
            position: absolute;
            inset: 0;
        }

        .hero-bg img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            opacity: 0.6;
        }

        .hero-bg::after {
            content: '';
            position: absolute;
            inset: 0;
            background: linear-gradient(135deg, rgba(44,36,32,0.85) 0%, rgba(44,36,32,0.4) 100%);
        }

        .hero-content {
            position: relative;
            z-index: 1;
            max-width: 1280px;
            margin: 0 auto;
            padding: 8rem 1.25rem 4rem;
            width: 100%;
        }

        .hero h1 {
            font-size: clamp(2rem, 6vw, 3.5rem);
            font-weight: 700;
            line-height: 1.15;
            color: var(--white);
            margin-bottom: 1.5rem;
            max-width: 700px;
        }

        .hero-subtitle {
            font-size: clamp(1rem, 2.5vw, 1.25rem);
            color: var(--text-on-dark-muted);
            max-width: 500px;
            margin-bottom: 2rem;
            line-height: 1.7;
        }

        .hero-actions {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
            margin-bottom: 3rem;
        }

        .btn {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 1rem 2rem;
            font-weight: 600;
            font-size: 1rem;
            border-radius: 8px;
            transition: all 0.3s;
        }

        .btn-primary {
            background: var(--accent);
            color: var(--white);
        }

        .btn-primary:hover {
            background: var(--accent-hover);
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(193,127,78,0.3);
        }

        .btn-secondary {
            background: rgba(255,255,255,0.1);
            color: var(--white);
            border: 1px solid rgba(255,255,255,0.2);
        }

        .btn-secondary:hover {
            background: rgba(255,255,255,0.2);
        }

        .btn-on-light {
            background: transparent;
            color: var(--text);
            border: 2px solid var(--border);
        }

        .btn-on-light:hover {
            border-color: var(--accent);
            color: var(--accent);
        }

        .hero-trust {
            display: flex;
            gap: 2.5rem;
            flex-wrap: wrap;
        }

        .hero-trust-item {
            display: flex;
            flex-direction: column;
        }

        .hero-trust-number {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--accent);
        }

        .hero-trust-label {
            font-size: 0.8125rem;
            color: var(--text-on-dark-muted);
        }

        /* Projects */
