            font-size: clamp(1.75rem, 4vw, 2.5rem);
            margin-bottom: 2rem;
        }

        .craft-text {
            font-size: 1.125rem;
            color: var(--text-secondary);
            line-height: 2;
            margin-bottom: 3rem;
        }

        .craft-stats {
            display: flex;
            justify-content: center;
            gap: 4rem;
            flex-wrap: wrap;
            padding-top: 3rem;
            border-top: 1px solid var(--border);
        }

        .craft-stat {
            text-align: center;
        }

        .craft-stat-number {
            font-family: 'Cormorant Garamond', serif;
            font-size: 2.5rem;
            color: var(--accent);
            margin-bottom: 0.5rem;
        }

        .craft-stat-label {
            font-size: 0.75rem;
            letter-spacing: 0.15em;
            text-transform: uppercase;
            color: var(--text-muted);
        }

        .craft-regions {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 0.75rem;
            margin-top: 3rem;
        }

        .craft-region {
            padding: 0.5rem 1rem;
            font-size: 0.8125rem;
            color: var(--text-secondary);
            background: var(--bg-light);
            border: 1px solid var(--border);
            transition: all 0.3s;
        }

        .craft-region:hover {
            border-color: var(--accent);
            color: var(--text);
        }

        .craft-region--more {
            color: var(--accent);
            border-color: var(--accent);
            background: transparent;
        }

        /* CTA */
        .cta {
            padding: 8rem 1.5rem;
            background: var(--bg-medium);
            text-align: center;
        }

        .cta-inner {
            max-width: 600px;
            margin: 0 auto;
        }

        .cta-tagline {
            font-size: 0.75rem;
            font-weight: 500;
            letter-spacing: 0.2em;
            text-transform: uppercase;
            color: var(--accent);
            margin-bottom: 1.5rem;
        }

        .cta h2 {
            font-size: clamp(2rem, 5vw, 3rem);
            margin-bottom: 1.5rem;
        }

        .cta p {
            color: var(--text-secondary);
            margin-bottom: 3rem;
        }

        .cta-phone {
            font-family: 'Cormorant Garamond', serif;
            font-size: 2.5rem;
            color: var(--accent);
            display: block;
            margin-bottom: 0.5rem;
            transition: color 0.3s;
        }

        .cta-phone:hover {
            color: var(--accent-hover);
        }

        .cta-hint {
            font-size: 0.8125rem;
            color: var(--text-muted);
            letter-spacing: 0.1em;
        }

        /* Footer */
        .footer {
            padding: 2rem 1.5rem;
            background: var(--bg-dark);
            border-top: 1px solid var(--border);
            text-align: center;
        }

        .footer p {
            font-size: 0.75rem;
            color: var(--text-muted);
            letter-spacing: 0.1em;
        }

        /* Responsive */
        @media (min-width: 640px) {
            .features-grid { grid-template-columns: repeat(2, 1fr); }
            .collection-grid { grid-template-columns: repeat(2, 1fr); }
        }

        @media (min-width: 768px) {
            .header { padding: 1.5rem 3rem; }
            .header-nav { display: flex; }
            .hero-content { padding: 10rem 3rem 6rem; }
        }

        @media (min-width: 1024px) {
            .features-grid { grid-template-columns: repeat(4, 1fr); }
            .collection-grid { grid-template-columns: repeat(3, 1fr); }
        }
    </style>
</head>
