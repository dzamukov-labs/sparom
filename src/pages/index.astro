        *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }

        :root {
            --bg-dark: #0D0D0D;
            --bg-medium: #151515;
            --bg-light: #1A1A1A;
            --text: #FAFAFA;
            --text-secondary: #A8A8A8;
            --text-muted: #707070;
            --accent: #D4915E;
            --accent-hover: #E5A36E;
            --border: #2A2A2A;
