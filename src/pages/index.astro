            font-size: 0.875rem;
            color: var(--accent);
            letter-spacing: 0.05em;
        }

        .collection-badge {
            position: absolute;
            top: 1rem;
            left: 1rem;
            z-index: 2;
            padding: 0.375rem 0.75rem;
            font-size: 0.6875rem;
            font-weight: 500;
            letter-spacing: 0.1em;
            text-transform: uppercase;
            background: var(--bg-dark);
            color: var(--text);
            border: 1px solid var(--border);
        }

        .collection-badge--accent {
            background: var(--accent);
            color: var(--bg-dark);
            border-color: var(--accent);
        }

        /* Craftsmanship */
        .craft {
            padding: 6rem 1.5rem;
            background: var(--bg-dark);
            border-top: 1px solid var(--border);
        }

        .craft-inner {
            max-width: 1000px;
